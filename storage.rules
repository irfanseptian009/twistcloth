rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
service firebase.storage {
  match /b/{bucket}/o {
    // Images: Allow read for all, write for authenticated users
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 3D Models: Allow read for all, write for authenticated users
    match /3d-models/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Products: Allow read for all, write for authenticated users
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: Allow read for all, write for authenticated users
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
